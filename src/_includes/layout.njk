<!-- arkitect/src/_includes/layout.njk -->
<!DOCTYPE html>
<html class="light">
  <head>
    <title>{{ title }}</title>
    <link rel="preload" href="/public/light.css" as="style">
    <link rel="stylesheet" href="/public/light.css" id="light-theme">
    <link rel="stylesheet" href="/public/dark.css" id="dark-theme" disabled>
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="icon" href="/public/favicon.ico" type="image/x-icon">
  </head>
  <body>
    <div id="root">
      <div class="layout">
        {% include "header.njk" %}
        <div class="content-wrapper">
          {% include "nav.njk" %}
          <div class="main-container">
            <div class="breadcrumb-wrapper"></div>
            <main class="content">{{ content | safe }}</main>
          </div>
        </div>
      </div>
    </div>
    <script type="module" src="/dist/main.js" defer></script>
  </body>
</html>